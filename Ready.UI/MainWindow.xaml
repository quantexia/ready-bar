<Window x:Class="Ready.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ready.UI"
        xmlns:controls="clr-namespace:Ready.UI.Controls"
        xmlns:cmd="clr-namespaec:Ready.UI.AppCommands"
        mc:Ignorable="d" 
        Title="Ready Bar" 
        Height="250" Width="200"
        Loaded="Window_Loaded"
        >
    <DockPanel LastChildFill="True">
        <StackPanel x:Name="spButtons" DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button Content="_" Width="50" />
            <Button Content="Add" Width="50" Command="local:AppCommands.IncrementProvisionCommand"/>
            <Button Content="Remove" Width="50" Command="local:AppCommands.DecrementProvisionCommand" />
            <Button Content="Ex" Width="50" Command="local:AppCommands.ExitCommand" />

        </StackPanel>
        <controls:LaunchableMonitorView />
    </DockPanel>
</Window>
